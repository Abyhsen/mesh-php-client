{
	"name": "gentics/mesh-php-client",
	"type": "library",
	"description": "Gentics Mesh PHP Client Library",
	"license": "Apache-2.0",
	"keywords": [
			"mesh",
			"rest-client",
			"sdk"
	],
	"autoload": {
		"psr-4": {
			"Gentics\\Mesh\\Client\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gentics\\Mesh\\ClientTest\\": "tests/"
		}
	},
	"require": {
		"php": ">=7.0",
		"guzzlehttp/guzzle": "^6.0"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.13@dev",
		"javihgil/composer-ci-tools": "~1.0",
		"phpunit/phpunit": "^6",
		"sensiolabs/security-checker": "^5.0@dev",
		"squizlabs/php_codesniffer": "^3.0@dev"
	},
	"extra" : {
		"ci-tools": {
			"global": {
				"log-format": "  <fg=cyan>> %s</>"
			},
			"lint": {
				"php-include": [ "src/" ]
			},	
			"phpcsfixer": {
				"dry-run": true
			}
		}
	},
	"config": {
		"sort-packages": true
	},
	"minimum-stability": "dev",
	"scripts": {
		"post-install-cmd": [
			"Jhg\\ComposerCiTools\\GitHooksInstaller::preCommit"
		],
		"pre-commit-hook": [
			"@test"
		],
		"lint": [
			"Jhg\\ComposerCiTools\\Lint::phpLazy"
		],
		"securitycheck": [
			"Jhg\\ComposerCiTools\\SecurityChecker::check"
		],
		"test": [
			"@composer validate",
			"Jhg\\ComposerCiTools\\PhpCsFixer::fix",
			"Jhg\\ComposerCiTools\\PhpUnit::test",
			"@securitycheck"
		],
		"fix": [
			"./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix"
		]
	}
}
